<h3>Products</h3>

<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= product.name %></h4>
      <%= link_to "Click for details", product_path(product), remote: true, id: "product-link-#{product.id}" %>
      <div id="product-content-<%=product.id%>">
      </div>

      <div id="cart-content">
        <%= form_for @order_item, remote: true do |f|%>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
        <% end %>
      </div>

    </div>
  <% end %>
</div>
</div>
